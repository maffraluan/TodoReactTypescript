{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "module": "CommonJS",
        "noImplicitAny": false,
        "outDir": "./build/",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
    },
    "exclude": ["node_modules"],
    "include": [
        "./src/**/*"
    ]
}